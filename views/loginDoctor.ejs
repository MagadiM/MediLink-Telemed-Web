<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head_reg.ejs') %>
<body>
    <div class="login-container">
        <!-- login form -->
        <div class="form-container" id="login-form">
            <h2>Login</h2>
            <form action="" id="login">
                <label for="login-email">Email: </label>
                <input type="email" id="login-email" placeholder="Enter your email"><br>
                <label for="login-password">Password: </label>
                <input type="password" id="login-password" placeholder="password">
                <br>
                <button type="submit" class="btn"><a href="doctor">Login</a></button>
                <p>Don't have an account? <a href="registerDoctor" id="show-register">Register</a></p>
            </form>
        </div>
    </div>
    <script src="script.js"></script>
</body>
</html>